<?xml version="1.0" encoding="UTF-8"?>
<beans default-init-method="init"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:tool="http://www.springframework.org/schema/tool"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd
           http://www.springframework.org/schema/tool http://www.springframework.org/schema/tool/spring-tool-2.0.xsd">

    <!-- Causes system propeties to be used -->
    <bean id="propertyPlaceholderConfigurer"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <!--<property name="location" ref="resourceLocation"/>-->
        <!-- Default is SYSTEM_PROPERTIES_MODE_FALLBACK -->
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
        <!-- Do not search (non-java) env vars -->
        <property name="searchSystemEnvironment" value="false"/>
        <!-- Don't try to resolve placeholders that are themseleves placeholders (scm.revision) -->
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
    </bean>

    <bean id="resourceLocation" class="org.springframework.core.io.ClassPathResource">
        <constructor-arg value="META-INF/artifactory.properties"/>
    </bean>

    <bean id="centralConfig" class="org.artifactory.config.CentralConfigFactoryBean"/>

    <bean id="jcrSessionHelper" class="org.artifactory.jcr.JackrabbitJcrWrapper" lazy-init="true">
        <property name="initStrategyFactory" ref="initStrategy"/>
        <property name="indexConfig" ref="indexConfigLocation"/>
        <property name="nodeTypes" ref="nodeTypesResource"/>
        <property name="repoXml" ref="repoXmlResource"/>
        <!--
                <property name="ocmClassesList">
                    <list>
                        <value>org.artifactory.jcr.ocm.OcmStorable</value>
                        <value>org.artifactory.keyval.KeyVals</value>
                        <value>org.artifactory.security.config.User</value>
                        <value>org.artifactory.security.RepoPathAcl</value>
                        <value>org.artifactory.security.RepoPathAce</value>
                    </list>
                </property>
        -->
    </bean>

    <bean id="initStrategy" class="org.artifactory.update.InitStrategyForExportStrategy"/>

    <bean id="nodeTypesResource" class="org.artifactory.update.VersionResourceLoader">
        <constructor-arg value="artifactory_nodetypes.xml"/>
    </bean>

    <bean id="repoXmlResource" class="org.artifactory.update.VersionResourceLoader">
        <constructor-arg value="repo.xml"/>
    </bean>

    <bean id="indexConfigLocation" class="org.artifactory.io.ClasspathResourceLoader">
        <constructor-arg value="/META-INF/jcr/index_config.xml"/>
    </bean>

    <bean id="maven" class="org.artifactory.maven.Maven"/>

    <bean id="keyVal" class="org.artifactory.update.KeyValsExport"/>

    <!--<import resource="updateScheduling.xml"/>-->
    <import resource="updateSecurity.xml"/>
</beans>
