<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.artifactory.maven1-layout-test</groupId>
    <artifactId>maven1-layout</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>Maven 1 Repo Layout Test</name>
    <description>tests a repository that uses a maven 1 layout</description>

    <parent>
        <groupId>org.artifactory.it</groupId>
        <artifactId>repo-parent</artifactId>
        <version>1.0</version>
        <relativePath>../repo-parent/pom.xml</relativePath>
    </parent>

    <!-- The followings need to be added to artifactory config:
        <remoteRepository>
            <key>java.net</key>
            <description>java.net</description>
            <handleReleases>true</handleReleases>
            <handleSnapshots>true</handleSnapshots>
            <type>maven1</type>
            <url>http://download.java.net/maven/1</url>
        </remoteRepository>
    -->

    <dependencies>
        <!-- dependencies from java.net maven 1 repo -->
        <dependency>
            <groupId>grizzly</groupId>
            <artifactId>grizzly</artifactId>
            <version>1.0.11</version>
            <scope>compile</scope>
        </dependency>

        <!-- dependency that doesn't exist in maven1 repo -->
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.14</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>

</project>
