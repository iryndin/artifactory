<!DOCTYPE configuration SYSTEM "http://jackrabbit.apache.org/dtd/indexing-configuration-1.0.dtd">
<configuration xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
               xmlns:jcr="http://www.jcp.org/jcr/1.0"
               xmlns:artifactory="http://artifactory.jfrog.org/1.0"
               xmlns:ocm="http://jackrabbit.apache.org/ocm">

    <index-rule nodeType="artifactory:file">
        <property boost="2.0">artifactory:name</property>
        <property useInExcerpt="true">artifactory:archiveEntry</property>
        <property>artifactory:archiveIndexed</property>
    </index-rule>

    <index-rule nodeType="artifactory:logEntry">
        <property>artifactory:timestamp</property>
    </index-rule>

</configuration>