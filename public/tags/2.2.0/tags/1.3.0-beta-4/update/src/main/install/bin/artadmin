#!/bin/sh

if [ -n "$JAVA_HOME"  ] ; then
   if [ -x "$JAVA_HOME/bin/java" ] ; then
       JAVACMD="$JAVA_HOME/bin/java"
   else
       echo "** ERROR: java under JAVA_HOME=$JAVA_HOME cannot be executed"
       exit 1
   fi
else
   JAVACMD=`which java 2> /dev/null `
   if [ -z "$JAVACMD" ] ; then
       JAVACMD=java
   fi
fi

UPDATE_DIR=`dirname $0`/..
UPDATE_DIR=`cd $UPDATE_DIR && pwd`

echo Starting Artifactory Admin
exec "$JAVACMD" $JAVA_OPTIONS -cp "$UPDATE_DIR/lib/*" org.artifactory.cli.ArtifactoryCli "$@"
