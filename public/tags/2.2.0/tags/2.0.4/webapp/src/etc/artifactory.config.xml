<?xml version="1.0" encoding="UTF-8"?>

<config xmlns="http://artifactory.jfrog.org/xsd/1.3.5" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://artifactory.jfrog.org/xsd/1.3.5 http://www.jfrog.org/xsd/artifactory-v1_3_5.xsd">

    <security>
        <anonAccessEnabled>true</anonAccessEnabled>
    </security>
