<?xml version="1.0" encoding="UTF-8"?>
<beans default-init-method="init" default-destroy-method="destroy"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:tool="http://www.springframework.org/schema/tool"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd
           http://www.springframework.org/schema/tool http://www.springframework.org/schema/tool/spring-tool-2.0.xsd">

    <bean id="security" class="org.artifactory.security.SecurityHelper">
        <property name="authenticationProvider" ref="daoAuthenticationProvider"/>
        <property name="aclProvider" ref="aclProvider"/>
    </bean>

    <!-- Authentication -->
    <bean id="daoAuthenticationProvider"
          class="org.acegisecurity.providers.dao.DaoAuthenticationProvider">
        <property name="userDetailsService" ref="userDetailsService"/>
        <!--<property name="saltSource">
            <ref bean="saltSource"/>
        </property>
        <property name="passwordEncoder">
            <ref bean="passwordEncoder"/>
        </property>-->
    </bean>

    <bean id="userDetailsService" class="org.artifactory.security.ExtendedJdbcDaoImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <!-- Authorization -->
    <bean id="aclProvider" class="org.acegisecurity.acl.basic.BasicAclProvider">
        <property name="basicAclDao" ref="aclDao"/>
    </bean>

    <bean id="aclDao" class="org.acegisecurity.acl.basic.jdbc.JdbcExtendedDaoImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="digestProcessingFilter"
          class="org.acegisecurity.ui.digestauth.DigestProcessingFilter">
        <property name="userDetailsService" ref="userDetailsService"/>
        <property name="authenticationEntryPoint" ref="digestProcessingFilterEntryPoint"/>
        <property name="passwordAlreadyEncoded" value="false"/>
    </bean>

    <bean id="digestProcessingFilterEntryPoint"
          class="org.acegisecurity.ui.digestauth.DigestProcessingFilterEntryPoint">
        <property name="realmName" value="Artifactory Realm"/>
        <property name="key" value="kofifo"/>
        <property name="nonceValiditySeconds" value="10"/>
    </bean>
</beans>