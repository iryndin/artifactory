        xsi:schemaLocation="http://artifactory.jfrog.org/xsd/1.2.0
        http://www.jfrog.org/xsd/artifactory-v1_2_0.xsd">
    <!--
    enable/disable anonymous downloads
    -->
    <anonDownloadsAllowed>false</anonDownloadsAllowed>
