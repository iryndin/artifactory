<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="initStrategy" class="org.artifactory.jcr.InitStrategyFactory"/>

    <bean id="nodeTypesResource" class="org.artifactory.io.ClasspathResourceLoader">
        <constructor-arg value="/META-INF/jcr/artifactory_nodetypes.xml"/>
    </bean>

    <bean id="repoXmlResource" class="org.artifactory.io.ClasspathResourceLoader">
        <constructor-arg value="/META-INF/jcr/repo_db.xml"/>
    </bean>

    <bean id="indexConfigLocation" class="org.artifactory.io.ClasspathResourceLoader">
        <constructor-arg value="/META-INF/jcr/index_config.xml"/>
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource"
          lazy-init="true">
        <property name="driverClassName" value="org.apache.derby.jdbc.EmbeddedDriver"/>
        <property name="url" value="jdbc:derby:${artifactory.home}/data/db;create=true"/>
    </bean>

</beans>